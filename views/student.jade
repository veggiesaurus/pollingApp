extends layout
block headerScripts		
	script.
		room="#{room}";
		socketPort="#{socketPort}"
	script(src='/js/student.js')
block content
	.navbar.navbar-inverse(role = 'navigation')
		.container
			.navbar-header
				.navbar-brand
					span.glyphicon.glyphicon-pencil
					|UCT QuickPoll
	.container
		.row
			.col-xs-12
				#pollPanel.panel.panel-primary(style='display:none')
					.panel-heading
						h3.panel-title
							span#pollHeading
								No Poll
					.panel-body
						div#poll
		#resultsRow.row
			.col-xs-12
				#alertStudentWaiting.alert.alert-primary(role='alert', style='display:none')
					span.glyphicon.glyphicon-time.pad7h
					span
						|Waiting for a new poll
				#alertStudentSubmitted(class='alert alert-success', role='alert', style='display:none')
					span(class='glyphicon glyphicon-ok pad7h')
					span
						|Successfully submitted poll 
					span#pollName
						|Test
				#alertStudentError(class='alert alert-danger', role='alert', style='display:none')
					span(class='glyphicon glyphicon-remove pad7h')
					span
						|Error submitting poll 
					span#pollNameError
						|Test
					span#pollErrorDetails
